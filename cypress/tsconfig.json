{
	"extends": "../tsconfig.json",
	"compilerOptions": {
		"target": "ES2020",
		"lib": ["ES2020", "DOM"],
		"types": ["cypress", "node"],
		"isolatedModules": false,
		"noEmit": true,
		"composite": true,
		"jsx": "react-jsx",
		"strict": true,
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"typeRoots": ["node_modules/@types"],
		"rootDir": "../"
	},
	"include": [
		"cypress/**/*.ts",
		"**/*.tsx",
		"**/*.ts",
		"cypress/**/*.tsx",
		"cypress/**/*.js",
		"cypress/**/*.jsx",
		"../client/src/models/**/*.ts"
	]
}
